      '#date_increment' => 15,
      '#date_year_range' => '-2:+2',
      '#datepicker_options' => array(
        'maxDate' => 0,
      ),
  );

  $form['submit_button'] = array(
    '#type' => 'submit',
    '#value' => t('Create Report'),
  );

  return $form;

/*To get the last part(after dot operator) of the matched username*/
function username_last_part($name) {
  $last = array();
  $result = db_query('SELECT name
                      FROM {users} u
                      WHERE u.name like :name'
                      ,array(':name' => $name."%"))
                      ->fetchAll();
  foreach($result as $value) {
    $last[] = $value->name;
  }
  return end($last);
}



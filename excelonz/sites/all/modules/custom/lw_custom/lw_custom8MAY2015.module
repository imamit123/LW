      FROM taxonomy_term_data td,
      taxonomy_term_hierarchy th
      WHERE
        th.tid IN  $section_ti
      AND
        (td.tid = th.tid or td.tid = th.parent)"
    );
      $class_nm = '';
      foreach ($sec_joinname as $key => $value) {
